@model IEnumerable<back_end_s5_l05.Models.Anagrafica>

<div class="d-flex justify-content-between align-items-center">
<h2 class="fw-bold m-0">Anagrafiche</h2>
    <a class="btn btn-success m-2" asp-controller="Anagrafica" asp-action="Create">Crea anagrafica</a>
</div>

<table class="table table-dark table-striped">
    <tr>
        <th scope="col">Cognome</th>
        <th scope="col">Nome</th>
        <th scope="col">Indirizzo</th>
        <th scope="col">Città</th>
        <th scope="col">CAP</th>
        <th scope="col">Codice Fiscale</th>
    </tr>
    @foreach (var anagrafica in Model)
    {
        <tr>
            <td>@anagrafica.Cognome</td>
            <td>@anagrafica.Nome</td>
            <td>@anagrafica.Indirizzo</td>
            <td>@anagrafica.Città</td>
            <td>@anagrafica.CAP</td>
            <td>@anagrafica.Cod_Fisc</td>
        </tr>
    }
</table>
