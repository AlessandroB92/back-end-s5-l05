@model List<back_end_s5_l05.Models.StatisticheVerbale>

@{
    ViewData["Title"] = "Totale Verbali per Trasgressore";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Anagrafica</th>
            <th>Totale Verbali</th>
            <th>Totale Punti Decurtati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var statistica in Model)
        {
            <tr>
                <td>@statistica.NomeAnagrafica @statistica.CognomeAnagrafica</td>
                <td>@statistica.TotaleVerbali</td>
                <td>@statistica.TotalePuntiDecurtati</td>
            </tr>
        }
    </tbody>
</table>


